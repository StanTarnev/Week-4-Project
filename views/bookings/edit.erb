<div>
  <form action="/bookings/<%=@booking.id%>" method="post">
    <div>
      <label>
        <span>Select a Gym Member:</span>
        <select name="member_id">
          <% for member in @members %>
          <option
          value="<%= member.id %>" <%="selected" if member.id == @booking.member.id %>><%= member.name %>
          </option>
          <% end %>
        </select>
      </label>

      <label>
        <span>Select a Gym Class:</span>
        <select name="gym_class_id">
          <% for gym_class in @gym_classes %>
          <option value="<%= gym_class.id %>"<%= "selected" if gym_class.id == @booking.gym_class.id%>><%= gym_class.name %> - <%= gym_class.time_slot %></option>
          <% end %>
        </select>
      </label>
    </div>

    <div>
      <input type='submit' value="Update Booking">
    </div>
  </form>
</div>
