<form method="post" action="/gym_classes/<%=@gym_class.id%>">


  <label for="gym_class_select">Select a Gym Class:</label>
  <select id="gym_class_select" name="name">
  <option value="Spinning"<%= "selected" if @gym_class.name == "Spinning" %>>Spinning</option>
  <option value="Boot Camp"<%= "selected" if @gym_class.name == "Boot Camp" %>>Boot Camp</option>
  <option value="Zumba"<%= "selected" if @gym_class.name == "Zumba" %>>Zumba</option>
  <option value="Cross Fit"<%= "selected" if @gym_class.name == "Cross Fit" %>>Cross Fit</option>
  <option value="Pilates"<%= "selected" if @gym_class.time_slot == "Pilates" %>>Pilates</option>
  <option value="Hatha Yoga"<%= "selected" if @gym_class.name == "Hatha Yoga" %>>Hatha Yoga</option>
  <option value="HIIT"<%= "selected" if @gym_class.name == "HIIT" %>>HIIT</option>
  <option value="Abs"<%= "selected" if @gym_class.name == "Abs" %>>Abs</option>
  <option value="Boxing"<%= "selected" if @gym_class.name == "Boxing" %>>Boxing</option>
  <option value="Muay Thai"<%= "selected" if @gym_class.name == "Muay Thai" %>>Muay Thai</option>
  <option value="Rowing"<%= "selected" if @gym_class.name == "Rowing" %>>Rowing</option>
  <option value="Swim Fit"<%= "selected" if @gym_class.name == "Swim Fit" %>>Swim Fit</option>
  <option value="Barre"<%= "selected" if @gym_class.name == "Barre" %>>Barre</option>
  </select>

  <label for="capacity">Capacity:</label>
  <input for="capacity" type="number" name="capacity" min="1" value="<%=@gym_class.capacity%>"/>

  <label for="time_slot_select">Select a Time Slot:</label>
  <select id="time_slot_select" name="time_slot" value="<%= @gym_class.time_slot %>">
    <option value="7-8am"<%= "selected" if @gym_class.time_slot == "7-8am" %> >7-8am</option>
    <option value="8-9am"<%= "selected" if @gym_class.time_slot == "8-9am" %>>8-9am</option>
    <option value="9-10am"<%= "selected" if @gym_class.time_slot == "9-10am" %>>9-10am</option>
    <option value="10-11am"<%= "selected" if @gym_class.time_slot == "10-11am" %>>10-11am</option>
    <option value="11-12am"<%= "selected" if @gym_class.time_slot == "11-12am" %>>11-12am</option>
    <option value="12-1pm"<%= "selected" if @gym_class.time_slot == "12-1pm" %>>12-1pm</option>
    <option value="1-2pm"<%= "selected" if @gym_class.time_slot == "1-2pm" %>>1-2pm</option>
    <option value="2-3pm"<%= "selected" if @gym_class.time_slot == "2-3pm" %>>2-3pm</option>
    <option value="3-4pm"<%= "selected" if @gym_class.time_slot == "3-4pm" %>>3-4pm</option>
    <option value="4-5pm"<%= "selected" if @gym_class.time_slot == "4-5pm" %>>4-5pm</option>
    <option value="5-6m"<%= "selected" if @gym_class.time_slot == "5-6pm" %>>5-6pm</option>
    <option value="6-7pm"<%= "selected" if @gym_class.time_slot == "6-7pm" %>>6-7pm</option>
    <option value="7-8pm"<%= "selected" if @gym_class.time_slot == "7-8pm" %>>7-8pm</option>
  </select>

  <input type="submit" value="Update Gym Class"/>

</form>
