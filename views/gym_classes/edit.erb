<div class="form-message">
  <form method="post" action="/gym_classes/<%=@gym_class.id%>">

    <div>
      <label for="gym_class_select"><span>Select a Gym Class:</span></label>
      <select id="gym_class_select" name="name">
        <option value="Spinning"<%= "selected" if @gym_class.name == "Spinning" %>>Spinning</option>
        <option value="Boot Camp"<%= "selected" if @gym_class.name == "Boot Camp" %>>Boot Camp</option>
        <option value="Zumba"<%= "selected" if @gym_class.name == "Zumba" %>>Zumba</option>
        <option value="Cross Fit"<%= "selected" if @gym_class.name == "Cross Fit" %>>Cross Fit</option>
        <option value="Pilates"<%= "selected" if @gym_class.name == "Pilates" %>>Pilates</option>
        <option value="Hatha Yoga"<%= "selected" if @gym_class.name == "Hatha Yoga" %>>Hatha Yoga</option>
        <option value="HIIT"<%= "selected" if @gym_class.name == "HIIT" %>>HIIT</option>
        <option value="Abs"<%= "selected" if @gym_class.name == "Abs" %>>Abs</option>
        <option value="Boxing"<%= "selected" if @gym_class.name == "Boxing" %>>Boxing</option>
        <option value="Muay Thai"<%= "selected" if @gym_class.name == "Muay Thai" %>>Muay Thai</option>
        <option value="Rowing"<%= "selected" if @gym_class.name == "Rowing" %>>Rowing</option>
        <option value="Swim Fit"<%= "selected" if @gym_class.name == "Swim Fit" %>>Swim Fit</option>
        <option value="Barre"<%= "selected" if @gym_class.name == "Barre" %>>Barre</option>
      </select>

      <label for="capacity"><span>Capacity:</span></label>
      <input for="capacity" type="number" name="capacity" min="1" value="<%=@gym_class.capacity%>"/>

      <label for="time_slot_select"><span>Select a Time Slot:</span></label>
      <select id="time_slot_select" name="time_slot" value="<%= @gym_class.time_slot %>">
        <option value="07:00-08:00"<%= "selected" if @gym_class.time_slot == "07:00-08:00" %>>07:00-08:00</option>
        <option value="08:00-09:00"<%= "selected" if @gym_class.time_slot == "08:00-09:00" %>>08:00-09:00</option>
        <option value="09:00-10:00"<%= "selected" if @gym_class.time_slot == "09:00-10:00" %>>09:00-10:00</option>
        <option value="10:00-11:00"<%= "selected" if @gym_class.time_slot == "10:00-11:00" %>>10:00-11:00</option>
        <option value="11:00-12:00"<%= "selected" if @gym_class.time_slot == "11:00-12:00" %>>11:00-12:00</option>
        <option value="12:00-13:00"<%= "selected" if @gym_class.time_slot == "12:00-13:00" %>>12:00-13:00</option>
        <option value="13:00-14:00"<%= "selected" if @gym_class.time_slot == "13:00-14:00" %>>13:00-14:00</option>
        <option value="14:00-15:00"<%= "selected" if @gym_class.time_slot == "14:00-15:00" %>>14:00-15:00</option>
        <option value="15:00-16:00"<%= "selected" if @gym_class.time_slot == "15:00-16:00" %>>15:00-16:00</option>
        <option value="16:00-17:00"<%= "selected" if @gym_class.time_slot == "16:00-17:00" %>>16:00-17:00</option>
        <option value="17:00-18:00"<%= "selected" if @gym_class.time_slot == "17:00-18:00" %>>17:00-18:00</option>
        <option value="18:00-19:00"<%= "selected" if @gym_class.time_slot == "18:00-19:00" %>>18:00-19:00</option>
        <option value="19:00-20:00"<%= "selected" if @gym_class.time_slot == "19:00-20:00" %>>19:00-20:00</option>
      </select>
    </div>
    <div>
      <input type="submit" value="Update Gym Class"/>
    </div>

  </form>
</div>
