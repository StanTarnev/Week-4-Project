<div class="form-message">
  <form action="/bookings" method="post">
    <div>
      <label>
        <span>Gym Member:</span>
        <select name="member_id">
          <option value="<%=@current_member.id%>"><%=@current_member.name%></option>
        </select>
      </label>

      <label>
        <span>Available Gym Class:</span>
        <select name="gym_class_id" required>
          <option selected disabled hidden>Choose here...</option>
          <% @gym_classes_not_conflicting.sort_by(&:time_slot).each do |gym_class| %>
          <option value="<%=gym_class.id%>"><%=gym_class.time_slot%> - <%=gym_class.name%></option>
          <%end%>
        </select>
      </label>
    </div>

    <div>
      <input type="submit" value="Add Booking">
    </div>
  </form>
</div>
